---
import Layout from "../layouts/Layout.astro";
import Experiencia from "../components/Experiencia.astro";
import Sections from "../components/Sections.astro";
import Proyectos from "../components/Proyectos.astro";
import Sobremi from "../components/Sobremi.astro";
import Tecnologias from "../components/Tecnologias.astro";
import Bienvenida from "../components/Bienvenida.astro";
---

<Layout
  title="Portfolio Sergio Avila Macho. Desarrollador web autodidacta, creativo y con espíritu de liderazgo."
  description="¡Bienvenido a mi mudo digital! Soy Sergio o también llamado Sam, un desarrollador web autodidacta, creativo y con espíritu de liderazgo. Mi portfiolio es mi escaparate de creatividad donde encontrarás mis proyectos e información sobre mi."
>
  <main>
    <Sections class="md:mt-28 md:mx-4 mt-14" id="inicio">
      <Bienvenida />
    </Sections>

    <Sections id="sobremi" class="md:mx-4">
      <Sobremi />
    </Sections>

    <Sections id="estudios" class="md:mx-4">
      <Experiencia />
    </Sections>

    <Sections id="tecnologias" class="md:mx-4">
      <Tecnologias />
    </Sections>

    <Sections id="proyectos" class="md:mx-4">
      <Proyectos />
    </Sections>
  </main>
</Layout>
