---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="author" content="Sergio Ávila Macho" />
    <link rel="canonical" href="https://sam-portfolio2023.netlify.app" />
    <meta
      name="keywords"
      content="Portfolio, desarrollador, ejemplo portfolio, astro, tailwind, contratar desarrolladores, contratar programadores"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content={title} />
    <title>{title}</title>

    <!-- Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://sam-portfolio2023.netlify.app" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/D4souls/portfolio-2023/main/public/313shots_so.png"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://sam-portfolio2023.netlify.app"
    />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content="https://raw.githubusercontent.com/D4souls/portfolio-2023/main/public/489shots_so.png"
    />
  </head>
  <body class="bg-[#f0ecec]">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
    overflow-x: hidden;
  }
  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  #wellcomeText {
    background: linear-gradient(318deg, #017980, #00f2ff, #05ada5, #00adb5);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    color: transparent;
    animation: Coolgradient 15s linear infinite;
    display: inline-block;
  }

  @keyframes Coolgradient {
    0% {
      background-position: 5% 0%;
    }
    50% {
      background-position: 96% 100%;
    }
    100% {
      background-position: 5% 0%;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }

    #wellcomeText {
      color: black;
    }
  }

