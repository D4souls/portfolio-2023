import Github from "../components/img/Github.astro";
import Mail from "../components/img/Mail.astro";
import Abajo from "./img/Abajo.astro";
---

<div class="flex flex-col justify-center items-start mx-10">
  <img src="logoPortfolio2023.webp" alt="Mi foto" class="md:w-32 md:h-32 w-20 h-20 rounded-full ring-2 ring-main p-1"/>
  <h1
    class="lg:text-8xl md:text-6xl text-4xl font-semibold text-black/90 py-4"
    id="wellcomeText"
  >
    Hola! Soy Sergio
  </h1>
  <h2 class="lg:text-2xl md:text-xl text-lg text-black/90">
    Apasionado desarrollador web con esp√≠ritu <span class="text-main"
      >creativo, proactivo y liderazgo.</span
    >
  </h2>
  <div class="flex flex-row items-center justify-center gap-4 mt-4">
    <a
      href="https://github.com/D4souls"
      target="_blank"
      rel="noopener noreferrer"
      class="text-white/90 md:text-lg text-sm font-semibold shadow-lg flex flex-row justify-center gap-1 bg-main rounded-lg p-1 hover:scale-105 hover:text-white transition"
    >
      <Github />
      GitHub
    </a>
    <a
      href="mailto:sergioavilamacho12@gmail.com"
      target="_blank"
      rel="noopener noreferrer"
      class="text-white/90 md:text-lg text-sm font-semibold shadow-lg flex flex-row justify-center gap-1 bg-main rounded-lg p-1 hover:scale-105 hover:text-white transition"
