      <Abajo/>
    </a>
  </div>
</div>


<style>

@media (prefers-reduced-motion: no-preference) {
  #flecha {
    animation: levitacion 8s infinite;
  }
  
  @keyframes levitacion {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

}


</style>